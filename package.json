{
    "name": "webgl-operate",
    "version": "0.3.5",
    "license": "MIT",
    "description": "A TypeScript based WebGL rendering framework.",
    "author": "CG Internals",
    "homepage": "https://webgl-operate.org",
    "jsdelivr": "./dist/webgl-operate.js",
    "bugs": {
        "email": "contact@cginternals.com",
        "url": "https://github.com/cginternals/webgl-operate/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cginternals/webgl-operate.git"
    },
    "main": "./lib/webgl-operate.js",
    "types": "./lib/webgl-operate.d.ts",
    "sideEffects": [
        "./source/polyfill.ts"
    ],
    "contributors": [
        {
            "name": "Daniel Limberger",
            "email": "daniel.limberger@cginternals.com"
        },
        {
            "name": "Philipp Otto",
            "email": "philipp.otto@cginternals.com"
        },
        {
            "name": "Willy Scheibel",
            "email": "willy.scheibel@cginternals.com"
        }
    ],
    "devDependencies": {
        "@types/chai": "~4.1.4",
        "@types/chai-spies": "~0.0.1",
        "@types/geometry-dom": "0.0.28",
        "@types/gl-matrix": "~2.3.0",
        "@types/mocha": "~5.2.4",
        "@types/sinon": "~4.3.3",
        "@types/webgl2": "0.0.4",
        "chai": "~4.1.2",
        "chai-spies": "~1.0.0",
        "coveralls": "~3.0.2",
        "cross-env": "~5.2.0",
        "gl-matrix": "~2.3.2",
        "glob": "~7.1.2",
        "http-server": "~0.11.1",
        "jsonschema": "~1.2.4",
        "mocha": "~5.2.0",
        "mocha-junit-reporter": "~1.17.0",
        "mocha-multi-reporters": "~1.1.7",
        "npm-run-all": "~4.1.3",
        "nyc": "~12.0.2",
        "pug": "~2.0.3",
        "rimraf": "~2.6.2",
        "rxjs": "~6.2.1",
        "sinon": "~4.5.0",
        "source-map-support": "~0.5.6",
        "ts-loader": "~4.4.1",
        "ts-node": "~5.0.1",
        "tslint": "~5.10.0",
        "typedoc": "~0.11.1",
        "typescript": "~2.9.2",
        "webpack": "~4.12.2",
        "webpack-bundle-analyzer": "~2.13.1",
        "webpack-cli": "~3.0.8",
        "webpack-glsl-loader": "~1.0.1",
        "webpack-rxjs-externals": "~2.0.0"
    },
    "peerDependencies": {
        "rxjs": "~6.2.1"
    },
    "scripts": {
        "build": "webpack-cli --mode development && node pugconfig.js",
        "build-watch": "webpack-cli --mode production --watch",
        "start": "http-server ./build -a localhost -c-1",
        "start-watch": "run-p build-watch pug-watch start",
        "build-dist": "webpack-cli --mode production --config webpack.config.dist.js",
        "build-dist-watch": "webpack-cli --mode development --config webpack.config.dist.js --watch",
        "build-lib": "webpack-cli --mode production --config webpack.config.lib.js",
        "build-lib-watch": "webpack-cli --mode development --config webpack.config.lib.js --watch",
        "pug-watch": "node pugconfig.js --watch",
        "cleanup": "rimraf ./dist ./lib ./build",
        "lint": "tslint --project tsconfig.json --force --format stylish --config tslint.json",
        "test": "mocha",
        "test-nyc": "nyc mocha",
        "test-watch": "mocha --watch",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "doc": "typedoc source/webgl-operate.ts",
        "ci": "run-s build-dist build-lib lint test-nyc",
        "analyze": "cross-env ANALYZE=true webpack-cli --mode production --config webpack.config.js",
        "prepack": "npm install && run-p build-dist build-lib"
    },
    "keywords": [
        "webgl",
        "rendering",
        "canvas",
        "engine",
        "2d",
        "3d",
        "multiframe",
        "path-tracing",
        "ray-tracing",
        "ray-marching",
        "voxel",
        "glTF",
        "viewer"
    ]
}
