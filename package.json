        }
    ],
    "devDependencies": {
        "@types/chai": "~4.1.3",
        "@types/chai-spies": "~0.0.1",
        "@types/gl-matrix": "~2.3.0",
        "@types/mocha": "~5.2.1",
        "@types/query-string": "~5.1.0",
        "@types/sinon": "~4.3.3",
        "@types/webgl2": "~0.0.4",
        "chai": "~4.1.2",
        "chai-spies": "~1.0.0",
        "coveralls": "~3.0.1",
        "cross-env": "~5.1.6",
        "gl-matrix": "~2.3.2",
        "glob": "~7.1.2",
        "http-server": "~0.11.1",
        "jsonschema": "~1.2.4",
        "mocha": "~5.2.0",
        "mocha-junit-reporter": "~1.17.0",
        "mocha-multi-reporters": "~1.1.7",
        "npm-run-all": "~4.1.3",
        "nyc": "~12.0.2",
        "pug": "~2.0.3",
        "query-string": "~5.1.1",
        "rimraf": "~2.6.2",
        "rxjs": "~5.5.10",
        "sinon": "~4.5.0",
        "source-map-support": "~0.5.6",
        "ts-loader": "~4.3.1",
        "ts-node": "~5.0.1",
        "tslint": "~5.10.0",
        "typedoc": "~0.11.1",
        "typescript": "~2.9.1",
        "webpack": "~4.11.1",
        "webpack-bundle-analyzer": "~2.13.1",
